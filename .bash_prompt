source "${HOME}/dotfiles/.shared_prompt"

# Box drawing character style prompt for Bash
PS1='\n'
PS1+='\[${gray}\]┌─'
PS1+='$(prompt_time)'
PS1+='\[${gray}\]─[\[${reset}\]'
PS1+='\u'  # username
PS1+='\[${gray}\]]─[\[${reset}\]'
PS1+='\W'  # working directory
PS1+='\[${gray}\]]'
PS1+='$(prompt_git_box)'
PS1+='$(prompt_exec_time_box)'
PS1+='$(prompt_exit_status)'
PS1+='$(prompt_jobs_box)'
PS1+='\n'
PS1+='\[${gray}\]└─>\[${reset}\] '
export PS1

PS2='\[${gray}\]───>\[${reset}\] '
export PS2
