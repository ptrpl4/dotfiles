{
  // ============================================================================
  // EDITOR BEHAVIOR
  // ============================================================================
  "auto_update": false,
  "autosave": "on_focus_change",
  "ensure_final_newline_on_save": true,
  "remove_trailing_whitespace_on_save": true,
  "show_edit_predictions": true,

  // ============================================================================
  // APPEARANCE & THEME
  // ============================================================================
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Ayu Mirage"
  },
  "icon_theme": {
    "mode": "system",
    "dark": "Zed (Default)",
    "light": "Zed (Default)"
  },

  // ============================================================================
  // FONTS
  // ============================================================================
  "ui_font_family": "Fira Code",
  "ui_font_size": 16,
  "buffer_font_family": "Fira Code",
  "buffer_font_size": 15,

  // ============================================================================
  // AI FEATURES
  // ============================================================================
  "edit_predictions": {
    "mode": "subtle"
  },
  "agent": {
    "enable_feedback": false,
    "always_allow_tool_actions": false
  },

  // ============================================================================
  // PANELS - LEFT SIDE
  // ============================================================================
  "project_panel": {
    "button": true,
    "dock": "left",
    "default_width": 240,
    "starts_open": true,
    "hide_root": true,
    "entry_spacing": "comfortable",
    "file_icons": false,
    "folder_icons": true,
    "git_status": true,
    "show_diagnostics": "all",
    "indent_size": 14,
    "auto_reveal_entries": true,
    "auto_fold_dirs": true,
    "drag_and_drop": true,
    "sticky_scroll": true,
    "indent_guides": {
      "show": "always"
    },
    "scrollbar": {
      "show": null
    }
  },
  "git_panel": {
    "button": true,
    "dock": "left",
    "default_width": 240,
    "status_style": "icon",
    "fallback_branch_name": "main",
    "sort_by_path": false,
    "collapse_untracked_diff": false,
    "scrollbar": {
      "show": null
    }
  },
  "collaboration_panel": {
    "button": false,
    "dock": "left",
    "default_width": 240
  },

  // ============================================================================
  // PANELS - RIGHT SIDE
  // ============================================================================
  "outline_panel": {
    "button": true,
    "dock": "right",
    "default_width": 360,
    "file_icons": true,
    "folder_icons": true,
    "git_status": true,
    "indent_size": 14,
    "auto_reveal_entries": true,
    "auto_fold_dirs": true,
    "indent_guides": {
      "show": "always"
    },
    "scrollbar": {
      "show": null
    }
  },
  "notification_panel": {
    "button": false
  },

  // ============================================================================
  // TERMINAL
  // ============================================================================
  "terminal": {
    "button": true,
    "dock": "bottom",
    "default_width": 640,
    "default_height": 320,
    "shell": "system",
    "working_directory": "current_project_directory",
    "line_height": "comfortable",
    "alternate_scroll": "off",
    "blinking": "terminal_controlled",
    "copy_on_select": false,
    "keep_selection_on_copy": true,
    "minimum_contrast": 45,
    "option_as_meta": false,
    "font_family": null,
    "font_features": null,
    "font_size": null,
    "env": {},
    "detect_venv": {
      "on": {
        "directories": [".env", "env", ".venv", "venv"],
        "activate_script": "default"
      }
    },
    "toolbar": {
      "breadcrumbs": false
    },
    "scrollbar": {
      "show": null
    }
  },

  // ============================================================================
  // GIT
  // ============================================================================
  "git": {
    "git_gutter": "tracked_files",
    "hunk_style": "staged_hollow",
    "inline_blame": {
      "enabled": true
    },
    "branch_picker": {
      "show_author_name": true
    }
  },

  // ============================================================================
  // UI COMPONENTS
  // ============================================================================
  "title_bar": {
    "show_branch_icon": true,
    "show_branch_name": true,
    "show_project_items": true,
    "show_onboarding_banner": false,
    "show_user_picture": false,
    "show_sign_in": true,
    "show_menus": true
  },
  "status_bar": {
    "active_language_button": true,
    "cursor_position_button": false
  },
  "tabs": {
    "close_position": "right",
    "activate_on_close": "history",
    "show_close_button": "always",
    "file_icons": false,
    "git_status": true,
    "show_diagnostics": "off"
  },
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": false,
    "selections_menu": true,
    "agent_review": true,
    "code_actions": true
  },

  // ============================================================================
  // PRIVACY & TELEMETRY
  // ============================================================================
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },

  // ============================================================================
  // LANGUAGE-SPECIFIC SETTINGS
  // ============================================================================
  "languages": {
    "Markdown": {
      "show_edit_predictions": false,
      "remove_trailing_whitespace_on_save": false,
      "soft_wrap": "bounded"
    }
  }
}
